---
import Landing from '../layouts/Landing.astro';
import Navigation from '../components/landing/Navigation.astro';
import Hero from '../components/landing/Hero.astro';
import About from '../components/landing/About.astro';
import Skills from '../components/landing/Skills.astro';
import Achievements from '../components/landing/Achievements.astro';
import Projects from '../components/landing/Projects.astro';
import BlogPreview from '../components/landing/BlogPreview.astro';
import Resources from '../components/landing/Resources.astro';
import Footer from '../components/landing/Footer.astro';

export const prerender = true;

const title = 'koborin.ai - Technical Garden for AI, Cloud, Software';
const description = 'Personal site and technical garden by Nozomi Koborinai. Exploring AI, cloud architecture, and continuous learning.';
---

<Landing title={title} description={description}>
  <Navigation />
  
  <main>
    <Hero />
    <About />
    <Skills />
    <Achievements />
    <Projects />
    <BlogPreview />
    <Resources />
  </main>
  
  <section class="cta-section">
    <div class="landing-container">
      <div class="cta-content">
        <h2 class="cta-title">Get Started Today</h2>
        <p class="cta-description">
          Explore the technical garden and discover insights on AI, cloud architecture, and software craftsmanship.
        </p>
        <a href="/about/" class="landing-btn landing-btn-primary">
          Explore the Garden
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <Footer />
</Landing>

<style>
  main {
    position: relative;
    z-index: 1;
  }
  
  .cta-section {
    padding: 5rem 0;
    background: var(--color-bg-primary);
    text-align: center;
  }
  
  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }
  
  .cta-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
    line-height: 1.7;
  }
</style>
