---
interface Project {
  icon: string;
  title: string;
  description: string;
  link?: string;
  tags: string[];
  featured?: boolean;
}

const projects: Project[] = [
  {
    icon: 'ðŸ“š',
    title: 'Mastering Genkit',
    description: 'Author and maintainer of the "Mastering Genkit" book series - comprehensive guides to learn and master the Genkit AI framework.',
    link: 'https://github.com/mastering-genkit',
    tags: ['Genkit', 'Go', 'AI', 'Book'],
    featured: true,
  },
  {
    icon: 'ðŸŽ¯',
    title: 'Dart Client for Genkit',
    description: 'Contributor & Maintainer of the official Dart client library for Genkit, enabling Flutter developers to build AI-powered applications.',
    link: 'https://github.com/genkit-ai/genkit-dart',
    tags: ['Dart', 'Flutter', 'Genkit', 'AI'],
    featured: true,
  },
  {
    icon: 'ðŸŽ“',
    title: 'Flutter University Mentor',
    description: 'Former instructor and current 1-on-1 mentor at Flutter University, Japan\'s Flutter engineering community, helping developers grow their skills.',
    tags: ['Flutter', 'Mentoring', 'Community', 'Education'],
  },
];
---

<section id="projects" class="landing-section projects-section">
  <div class="landing-container">
    <div class="section-header">
      <span class="section-tag">Work</span>
      <h2 class="landing-section-title">Projects & Contributions</h2>
      <p class="section-description">
        Open source projects and community contributions I'm proud to be part of.
      </p>
    </div>
    
    <div class="projects-grid">
      {projects.map((project) => (
        <div class={`project-card ${project.featured ? 'featured' : ''}`}>
          {project.featured && <span class="featured-badge">Featured</span>}
          <div class="project-icon">{project.icon}</div>
          <h3 class="project-title">
            {project.link ? (
              <a href={project.link} target="_blank" rel="noopener noreferrer">
                {project.title}
                <svg class="external-link" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15 3 21 3 21 9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
              </a>
            ) : (
              project.title
            )}
          </h3>
          <p class="project-description">{project.description}</p>
          <div class="project-tags">
            {project.tags.map((tag) => (
              <span class="project-tag">{tag}</span>
            ))}
          </div>
          {project.link && (
            <a href={project.link} target="_blank" rel="noopener noreferrer" class="project-link">
              View on GitHub
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .projects-section {
    background: var(--color-bg-primary);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }
  
  .section-tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: rgba(66, 133, 244, 0.1);
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-md);
  }
  
  .section-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }
  
  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .project-card {
    position: relative;
    display: flex;
    flex-direction: column;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    transition: all var(--transition-normal);
  }
  
  .project-card:hover {
    background: var(--color-bg-card-hover);
    border-color: var(--color-border-hover);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .project-card.featured {
    border-color: var(--color-accent);
    background: linear-gradient(
      135deg,
      rgba(66, 133, 244, 0.05) 0%,
      var(--color-bg-card) 100%
    );
  }
  
  .project-card.featured:hover {
    box-shadow: var(--shadow-lg), var(--shadow-glow);
  }
  
  .featured-badge {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    padding: 0.25rem 0.625rem;
    background: var(--gradient-accent);
    color: white;
    font-size: 0.6875rem;
    font-weight: 600;
    border-radius: var(--radius-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .project-icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-md);
  }
  
  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }
  
  .project-title a {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: inherit;
  }
  
  .project-title a:hover {
    color: var(--color-accent);
  }
  
  .external-link {
    opacity: 0.5;
  }
  
  .project-description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
    flex-grow: 1;
  }
  
  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-lg);
  }
  
  .project-tag {
    padding: 0.25rem 0.625rem;
    background: var(--color-bg-tertiary);
    color: var(--color-text-muted);
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: var(--radius-sm);
  }
  
  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: auto;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent);
  }
  
  .project-link:hover {
    gap: 0.75rem;
  }
</style>
