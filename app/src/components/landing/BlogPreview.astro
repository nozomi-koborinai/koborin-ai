---
interface BlogPost {
  title: string;
  excerpt: string;
  category: string;
  readTime: string;
  href: string;
}

const posts: BlogPost[] = [
  {
    title: 'Reflections on 2025',
    excerpt: 'First time abroad, publishing a book, becoming a team leader. A record of a turbulent year where I discovered myself through connections with others.',
    category: 'Life',
    readTime: '5 min read',
    href: '/life/reflections-on-2025/',
  },
  {
    title: 'Understanding Authentication Tokens with Firebase Auth',
    excerpt: 'A deep dive into authentication tokens comparing OAuth 2.0/OpenID Connect standards with Firebase Auth\'s unique approach.',
    category: 'Tech',
    readTime: '15 min read',
    href: '/tech/firebase-auth-token-deep-dive/',
  },
  {
    title: 'Welcome to koborin.ai',
    excerpt: 'Personal site and technical garden by Nozomi Koborinai. Exploring AI, cloud architecture, and continuous learning.',
    category: 'About',
    readTime: '3 min read',
    href: '/about-me/overview/',
  },
];
---

<section id="blog" class="landing-section blog-section">
  <div class="landing-container">
    <div class="section-header">
      <span class="section-tag">Blog</span>
      <h2 class="landing-section-title">Latest from the Garden</h2>
      <p class="section-description">
        Insights, tutorials, and thoughts on software development.
      </p>
    </div>
    
    <div class="blog-grid">
      {posts.map((post) => (
        <a href={post.href} class="blog-card-link">
          <article class="blog-card">
            <div class="blog-meta">
              <span class="blog-category">{post.category}</span>
            </div>
            <h3 class="blog-title">{post.title}</h3>
            <p class="blog-excerpt">{post.excerpt}</p>
            <div class="blog-footer">
              <span class="blog-read-time">{post.readTime}</span>
              <span class="blog-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </span>
            </div>
          </article>
        </a>
      ))}
    </div>
    
    <div class="blog-cta">
      <p class="cta-message">
        <span class="cta-icon">ðŸŒ±</span>
        Explore the garden and discover more insights.
      </p>
      <a href="/about-me/overview/" class="landing-btn landing-btn-secondary">
        Explore the Garden
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .blog-section {
    background: var(--color-bg-primary);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }
  
  .section-tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: rgba(66, 133, 244, 0.1);
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-md);
  }
  
  .section-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }
  
  @media (min-width: 768px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .blog-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  
  .blog-card {
    display: flex;
    flex-direction: column;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    transition: all var(--transition-normal);
    height: 100%;
  }
  
  .blog-card-link:hover .blog-card {
    background: var(--color-bg-card-hover);
    border-color: var(--color-border-hover);
    transform: translateY(-4px);
  }
  
  .blog-meta {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: var(--space-md);
  }
  
  .blog-category {
    padding: 0.25rem 0.625rem;
    background: rgba(66, 133, 244, 0.1);
    color: var(--color-accent);
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: var(--radius-sm);
  }
  
  .blog-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
    line-height: 1.4;
  }
  
  .blog-excerpt {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    flex-grow: 1;
    margin-bottom: var(--space-lg);
  }
  
  .blog-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }
  
  .blog-read-time {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }
  
  .blog-arrow {
    color: var(--color-accent);
    opacity: 0;
    transform: translateX(-8px);
    transition: all var(--transition-normal);
  }
  
  .blog-card-link:hover .blog-arrow {
    opacity: 1;
    transform: translateX(0);
  }
  
  .blog-cta {
    margin-top: var(--space-3xl);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-lg);
  }
  
  .cta-message {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
  }
  
  .cta-icon {
    font-size: 1.25rem;
  }
</style>
