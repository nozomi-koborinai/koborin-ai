<section id="skills" class="landing-section skills-section">
  <div class="landing-container">
    <div class="section-header">
      <span class="section-tag">Expertise</span>
      <h2 class="landing-section-title">Skills & Expertise</h2>
      <p class="section-description">
        Areas I'm passionate about and continuously exploring in my journey.
      </p>
    </div>
    
    <div class="skills-grid">
      {skills.map((skill) => (
        <div class="skill-card landing-card">
          <div class="skill-icon">{skill.icon}</div>
          <h3 class="skill-title">{skill.title}</h3>
          <p class="skill-description">{skill.description}</p>
          <div class="skill-tags">
            {skill.tags.map((tag) => (
              <span class="skill-tag">{tag}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .skills-section {
    background: var(--color-bg-primary);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }
  
  .section-tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: rgba(66, 133, 244, 0.1);
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-md);
  }
  
  .section-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .skills-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }
  
  @media (min-width: 640px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .skills-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  .skill-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    text-align: center;
  }
  
  .skill-icon {
    font-size: 2.5rem;
    line-height: 1;
  }
  
  .skill-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
  }
  
  .skill-description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    flex-grow: 1;
  }
  
  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-xs);
    margin-top: auto;
  }
  
  .skill-tag {
    padding: 0.25rem 0.625rem;
    background: var(--color-bg-tertiary);
    color: var(--color-text-muted);
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: var(--radius-sm);
  }
</style>
