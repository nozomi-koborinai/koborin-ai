---
interface Achievement {
  icon: string;
  title: string;
  description: string;
  year?: string;
  link?: string;
}

const achievements: Achievement[] = [
  {
    icon: 'üèÜ',
    title: 'Google Cloud Partner Top Engineer',
    description: 'Serverless App Development - Japan-exclusive award program recognizing expertise in Google Cloud technologies.',
    year: '2025 & 2026',
  },
  {
    icon: 'üîß',
    title: 'Genkit Contributor',
    description: 'Contributor to the genkit-ai organization, helping build the AI framework for full-stack apps.',
    link: 'https://github.com/genkit-ai',
  },
  {
    icon: 'üéØ',
    title: 'Dart Client for Genkit',
    description: 'Contributor & Maintainer of the Dart client library for Genkit, enabling Flutter developers to build AI-powered applications.',
    link: 'https://github.com/genkit-ai/genkit-dart',
  },
  {
    icon: 'üé§',
    title: 'Conference Speaker',
    description: 'Speaker at Google I/O Extended Tokyo and GDG DevFest, sharing knowledge about modern development practices.',
  },
];
---

<section id="achievements" class="landing-section achievements-section">
  <div class="landing-container">
    <div class="section-header">
      <span class="section-tag">Recognition</span>
      <h2 class="landing-section-title">Achievements & Community</h2>
      <p class="section-description">
        Recognition and contributions to the developer community.
      </p>
    </div>
    
    <div class="achievements-grid">
      {achievements.map((achievement) => (
        <div class="achievement-card">
          <div class="achievement-header">
            <span class="achievement-icon">{achievement.icon}</span>
            {achievement.year && (
              <span class="achievement-year">{achievement.year}</span>
            )}
          </div>
          <h3 class="achievement-title">
            {achievement.link ? (
              <a href={achievement.link} target="_blank" rel="noopener noreferrer">
                {achievement.title}
                <svg class="external-link" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15 3 21 3 21 9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
              </a>
            ) : (
              achievement.title
            )}
          </h3>
          <p class="achievement-description">{achievement.description}</p>
        </div>
      ))}
    </div>
    
    <div class="achievements-cta">
      <p class="cta-text">
        I believe that promoting good products is essential for energizing developer communities. 
        Driven by my passion for great products and developer communities, I feel a strong mission to spread their value worldwide.
      </p>
    </div>
  </div>
</section>

<style>
  .achievements-section {
    background: var(--color-bg-secondary);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }
  
  .section-tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: rgba(66, 133, 244, 0.1);
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-md);
  }
  
  .section-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .achievements-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }
  
  @media (min-width: 768px) {
    .achievements-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  .achievement-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    transition: all var(--transition-normal);
  }
  
  .achievement-card:hover {
    background: var(--color-bg-card-hover);
    border-color: var(--color-border-hover);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .achievement-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-md);
  }
  
  .achievement-icon {
    font-size: 2rem;
  }
  
  .achievement-year {
    padding: 0.25rem 0.75rem;
    background: var(--gradient-accent);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: var(--radius-full);
  }
  
  .achievement-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }
  
  .achievement-title a {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: inherit;
  }
  
  .achievement-title a:hover {
    color: var(--color-accent);
  }
  
  .external-link {
    opacity: 0.5;
  }
  
  .achievement-description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  .achievements-cta {
    margin-top: var(--space-3xl);
    text-align: center;
  }
  
  .cta-text {
    max-width: 700px;
    margin: 0 auto;
    padding: var(--space-xl);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    font-style: italic;
  }
</style>
