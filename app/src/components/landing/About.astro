<style>
  .about-section {
    background: var(--color-bg-secondary);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }
  
  .section-tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: rgba(66, 133, 244, 0.1);
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-md);
  }
  
  .about-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2xl);
  }
  
  @media (min-width: 1024px) {
    .about-content {
      grid-template-columns: 1.5fr 1fr;
      gap: var(--space-3xl);
    }
  }
  
  .about-main {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }
  
  .about-intro {
    font-size: 1.25rem;
    color: var(--color-text-primary);
    line-height: 1.7;
  }
  
  .about-body {
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    line-height: 1.8;
  }
  
  .about-body strong {
    color: var(--color-text-primary);
    font-weight: 600;
  }
  
  .about-quote {
    margin: var(--space-lg) 0;
    padding: var(--space-lg) var(--space-xl);
    background: var(--color-bg-card);
    border-left: 4px solid var(--color-accent);
    border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
    font-size: 1.125rem;
    font-style: italic;
    color: var(--color-text-primary);
  }
  
  .about-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }
  
  .about-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
  }
  
  .about-card-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
    color: var(--color-text-primary);
  }
  
  .about-interests {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .about-interests li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
  }
  
  .interest-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }
  
  .about-interests strong {
    display: block;
    color: var(--color-text-primary);
    font-weight: 600;
    margin-bottom: 0.125rem;
  }
  
  .about-interests span {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
  
  .about-card-text {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }
  
  .about-card-text strong {
    color: var(--color-accent);
    font-weight: 600;
  }
  
  .about-card-text em {
    font-style: normal;
    color: var(--color-text-primary);
  }
</style>
