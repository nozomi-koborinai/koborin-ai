---
import { Image } from 'astro:assets';
import profileImage from '../../assets/nozomi-koborinai.jpeg';

// Type definition for stats data
interface Stat {
  value: string;
  label: string;
}

// Stats data extracted for maintainability
const stats: Stat[] = [
  { value: '6+', label: 'Years Experience' },
  { value: '2x', label: 'GCP Top Engineer' },
  { value: 'OSS', label: 'Contributor' },
];

// Hero content constants
const heroContent = {
  titlePrefix: 'Technical garden for',
  titleHighlight: 'AI, Cloud, Software',
  subtitle: 'Documenting my journey in AI, Cloud, and Modern Software Engineering.',
  primaryCta: { label: 'About Me', href: '#about' },
  secondaryCta: { label: 'Tech Notes', href: '/about/' },
};
---

<section class="hero-section">
  <div class="hero-bg">
    <div class="hero-gradient"></div>
    <div class="hero-grid"></div>
  </div>

  <div class="landing-container hero-content">
    <div class="hero-text">
      <h1 class="hero-title animate-fade-in-up">
        {heroContent.titlePrefix}<br />
        <span class="hero-highlight">{heroContent.titleHighlight}</span>
      </h1>

      <p class="hero-subtitle animate-fade-in-up animation-delay-100">
        {heroContent.subtitle}
      </p>

      <div class="hero-cta animate-fade-in-up animation-delay-200">
        <a href={heroContent.primaryCta.href} class="landing-btn landing-btn-primary">
          {heroContent.primaryCta.label}
        </a>
        <a href={heroContent.secondaryCta.href} class="landing-btn landing-btn-secondary">
          {heroContent.secondaryCta.label}
        </a>
      </div>
    </div>

    <div class="hero-visual animate-fade-in animation-delay-200">
      <div class="hero-image-wrapper">
        {/* Use astro:assets Image for optimized image delivery */}
        <Image
          src={profileImage}
          alt="Nozomi Koborinai"
          class="hero-image"
          width={680}
          height={680}
          quality={85}
        />
        <div class="hero-image-glow"></div>
      </div>
      <div class="hero-stats">
        {stats.map((stat) => (
          <div class="stat-item">
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: 5rem;
    padding-bottom: var(--space-3xl);
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 80% 50% at 50% -20%, rgba(66, 133, 244, 0.15), transparent);
  }

  [data-theme="light"] .hero-gradient {
    background: radial-gradient(ellipse 80% 50% at 50% -20%, rgba(66, 133, 244, 0.08), transparent);
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(66, 133, 244, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(66, 133, 244, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: linear-gradient(to bottom, black 0%, transparent 70%);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  @media (min-width: 768px) {
    .hero-content {
      gap: var(--space-2xl);
    }
  }

  @media (min-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-3xl);
    }
  }

  .hero-text {
    text-align: center;
  }

  @media (min-width: 1024px) {
    .hero-text {
      text-align: left;
    }
  }

  .hero-title {
    font-size: clamp(2.25rem, 6vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-lg);
  }

  .hero-highlight {
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--color-text-secondary);
    line-height: 1.7;
    max-width: 540px;
    margin-bottom: var(--space-xl);
  }

  @media (min-width: 1024px) {
    .hero-subtitle {
      margin-left: 0;
      margin-right: auto;
    }
  }

  @media (max-width: 1023px) {
    .hero-subtitle {
      margin: 0 auto var(--space-xl);
    }
  }

  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .hero-cta {
      justify-content: flex-start;
    }
  }

  .hero-visual {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xl);
  }

  .hero-image-wrapper {
    position: relative;
    width: 280px;
    height: 280px;
  }

  @media (min-width: 768px) {
    .hero-image-wrapper {
      width: 340px;
      height: 340px;
    }
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: var(--radius-xl);
    border: 2px solid var(--color-border);
    box-shadow: var(--shadow-lg);
  }

  .hero-image-glow {
    position: absolute;
    inset: -20px;
    background: var(--gradient-accent);
    opacity: 0.2;
    filter: blur(40px);
    z-index: -1;
    border-radius: 50%;
  }

  .hero-stats {
    display: flex;
    gap: var(--space-2xl);
    padding: var(--space-md) 0;
    /* Minimal style */
    background: transparent;
    border: none;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-top: var(--space-xs);
    white-space: nowrap;
    font-weight: 500;
  }

  /* Animation utilities */
  .animate-fade-in-up,
  .animate-fade-in {
    opacity: 0;
  }
</style>
