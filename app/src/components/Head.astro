---
import Default from '@astrojs/starlight/components/Head.astro';

const ogImage = (Astro.props.entry?.data as { ogImage?: string })?.ogImage;
const ogImageUrl = ogImage ? new URL(ogImage, Astro.site).href : `${Astro.site}og/index.png`;
---

<Default {...Astro.props}>
  <slot />
</Default>

<meta property="og:image" content={ogImageUrl} />
<meta name="twitter:image" content={ogImageUrl} />

