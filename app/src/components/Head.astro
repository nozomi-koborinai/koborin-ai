---
import Default from '@astrojs/starlight/components/Head.astro';

const { entry } = Astro.locals.starlightRoute;
const ogImage = (entry.data as { ogImage?: string })?.ogImage;

// Auto-convert .png/.jpg/.jpeg references to .webp (CI generates WebP versions)
const normalizeToWebp = (path: string) => path.replace(/\.(png|jpe?g)$/i, '.webp');
const ogImagePath = ogImage ? normalizeToWebp(ogImage) : '/og/index.webp';
const ogImageUrl = new URL(ogImagePath, Astro.site).href;

const gaMeasurementId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;
---

<Default {...Astro.props}>
  <slot />
</Default>

<meta property="og:image" content={ogImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta name="twitter:image" content={ogImageUrl} />

{gaMeasurementId && (
  <>
    <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${gaMeasurementId}`}></script>
    <script is:inline define:vars={{ gaMeasurementId }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', gaMeasurementId);
    </script>
  </>
)}

